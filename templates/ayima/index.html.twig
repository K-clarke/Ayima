{% extends 'base.html.twig' %}

{% block title %}Hello AyimaController!{% endblock %}

{% block body %}

    <div class="container-fluid">

        <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
            <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Ayima Domain score</a>
            <ul class="navbar-nav px-3">
                <li class="nav-item text-nowrap">
                </li>
            </ul>
        </nav>

        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Showing results for {{ domain }}</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                </div>
                <button class="btn btn-primary btn-sm btn-outline-secondary dropdown-toggle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                         class="feather feather-calendar">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    This week
                </button>
            </div>
        </div>

        <table class="table table-striped table-sm ">
            <thead>
            <tr>
                <th>Date</th>
                <th>Score</th>
            </tr>
            </thead>
            <tbody>
            {% for score in scores %}
                <tr>
                    <td>{{ score['date'] }}</td>
                    <td>{{ score['score'] }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
